{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "description": "Android NDK development preset",
      "hidden": false,
      "binaryDir": "${sourceDir}/../../../build",
      "cacheVariables": {
        "ANDROID_ABI": "arm64-v8a",
        "ANDROID_PLATFORM_LEVEL": "android-24",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "android-arm64",
      "inherits": "default",
      "description": "Build for Android ARM64",
      "cacheVariables": {
        "ANDROID_ABI": "arm64-v8a"
      }
    },
    {
      "name": "android-armv7",
      "inherits": "default",
      "description": "Build for Android ARMv7",
      "cacheVariables": {
        "ANDROID_ABI": "armeabi-v7a"
      }
    },
    {
      "name": "android-x86",
      "inherits": "default",
      "description": "Build for Android x86",
      "cacheVariables": {
        "ANDROID_ABI": "x86"
      }
    },
    {
      "name": "android-x86_64",
      "inherits": "default",
      "description": "Build for Android x86_64",
      "cacheVariables": {
        "ANDROID_ABI": "x86_64"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    }
  ]
}
