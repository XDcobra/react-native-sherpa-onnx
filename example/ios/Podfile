ENV['RCT_NEW_ARCH_ENABLED'] = '1'

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'VoiceLabOfflineTools' do

  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
  end
end

# Ensure codegen runs for the iOS native spec when pods are installed in CI
# or fresh checkouts. This runs the RN codegen script if the generated
# `SherpaOnnxSpec/SherpaOnnxSpec.h` header is missing.
pre_install do |installer|
  spec_header = File.join(Dir.pwd, '..', 'ios', 'SherpaOnnxSpec', 'SherpaOnnxSpec.h')
  unless File.exist?(spec_header)
    UI.message("SherpaOnnxSpec not found; running iOS codegen to generate spec headers...")
    sh = 'node'
    script = File.join(Dir.pwd, '..', 'node_modules', 'react-native', 'scripts', 'generate-codegen-artifacts.js')
    if File.exist?(script)
      Dir.chdir(File.join(Dir.pwd, '..')) do
        system(sh, script, '-p', '.', '-t', 'ios', '-o', 'ios', '-s', 'library')
      end
    else
      UI.warn("React Native codegen script not found at #{script}; install node_modules first.")
    end
  end
end
