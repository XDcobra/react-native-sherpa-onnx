# Auto detect text files and perform LF normalization
* text=auto

# Xcode project files - no text normalization
*.pbxproj -text

# Shell scripts should always use LF
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Source code files should use LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.java text eol=lf
*.kt text eol=lf
*.m text eol=lf
*.h text eol=lf
*.mm text eol=lf
*.cpp text eol=lf
*.c text eol=lf

# Configuration and documentation files should use LF
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.xml text eol=lf
*.gradle text eol=lf
*.properties text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Windows-specific files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
